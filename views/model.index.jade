extends ./layout.jade

block content
  .row
    .col-md-6
      h2 #{modelName}
    .col-md-6
      a.btn.btn-primary.pull-right(href="/admin/#{modelName}/create") New #{modelName}
  .row
    .col-md-12
      table.table
        thead
          tr
            each attrs, attrName in modelSchema
              th #{attrName}
            th Actions
        tbody
          each item, indexItem in models
            tr
              each attrs, attrName in modelSchema
                td #{helpers.list.item(item[attrName], attrName, attrs)}
              td   
                button.btn.btn-primary.btn-sm Edit
                | &nbsp;
                a.btn.btn-danger.btn-sm(href="/admin/#{modelName}/delete/#{item.id}") Delete
