mixin input(name, attr, type)
  - type = type || 'text'
  fieldset.form-group
    label.capitalize(for='#{name}') #{name}
    input.form-control(type='#{type}', name="#{name}", required=(attr.required ? "required" : undefined))
      
mixin select(name, attr, options)
  fieldset.form-group
    label.capitalize(for='#{name}') #{name}
    select.form-control(name="#{name}")
      each item, index in options
        option(value="#{item.value}") #{item.name}



    
case element
  when 'input'
    +input(name, attr, type)
  when 'select'
    +select(name, attr, options)
